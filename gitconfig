# Global git config file

[push]
  # Only push the current branch
  default = matching

[core]
  # Global .gitignore
  excludesfile = gitignore

  # Adding some mergetool management here might be nice
  
  # Repair files with Windows-endline-formatting-style (CRLF) on commit :
  autocrlf = input

[alias]
	fullog = commit --oneline --graph --all --decorate

# Include private configuration
[include]
  path = gitconfig.private

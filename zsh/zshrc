#!/bin/zsh
# Places you into current directory
pushd $(dirname $0) > /dev/null

# Loading common comonents
if [ -f ../commonrc ]; then
  pushd .. > /dev/null
  source commonrc
  popd > /dev/null
fi

# Chargement du prompt
if [ -f prompt ]; then
  source prompt
fi

# Compinit
if [ -f compinstall ]; then
  source compinstall
fi

# zsh-syntax-highlighting, MUST stay last
if [ -f zsh-syntax-highlighting ]; then
  source zsh-syntax-highlighting
fi

# Se replace dans le dossier précédent
popd > /dev/null
